{
  "name": "@huchenme/github-trending",
  "version": "0.0.0-development",
  "description": "Get GitHub trending data",
  "main": "dist/github-trending.cjs.js",
  "module": "dist/github-trending.esm.js",
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "scripts": {
    "start": "node ./dist/server.js",
    "babel-node": "babel-node --presets @babel/preset-env ./src/server.js",
    "dev": "nodemon --exec npm run babel-node",
    "contributors:add": "all-contributors add",
    "test": "jest --coverage",
    "lint": "eslint ./src",
    "validate": "npm-run-all lint test",
    "clean": "rimraf dist",
    "rollup:build": "rollup -c",
    "rollup:build:prod": "NODE_ENV=production rollup -c",
    "heroku-postbuild": "npm run rollup:build:prod",
    "semantic-release": "semantic-release",
    "travis-deploy-once": "travis-deploy-once",
    "build": "npm run clean && npm run rollup:build:prod",
    "now": "npm-run-all now:*",
    "now:deploy": "now --public",
    "now:alias": "now alias"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/huchenme/github-trending-api.git"
  },
  "keywords": [
    "github",
    "trending",
    "api",
    "node"
  ],
  "author": "Hu Chen <chen@huchen.me>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/huchenme/github-trending-api/issues"
  },
  "homepage": "https://github.com/huchenme/github-trending-api#readme",
  "dependencies": {
    "@babel/runtime": "^7.1.2",
    "cheerio": "^1.0.0-rc.2",
    "cors": "^2.8.4",
    "express": "^4.16.4",
    "lodash": "^4.17.11",
    "memory-cache": "^0.2.0",
    "node-fetch": "^2.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.1.2",
    "@babel/node": "^7.0.0",
    "@babel/plugin-transform-runtime": "^7.1.0",
    "@babel/preset-env": "^7.1.0",
    "all-contributors-cli": "^5.4.0",
    "babel-core": "^7.0.0-0",
    "babel-jest": "^23.6.0",
    "babel-plugin-lodash": "^3.3.4",
    "doctoc": "^1.3.1",
    "eslint": "^5.7.0",
    "eslint-config-kentcdodds": "^14.0.4",
    "husky": "^1.3.1",
    "jest": "^23.6.0",
    "lint-staged": "^8.1.3",
    "nodemon": "^1.18.4",
    "npm-run-all": "^4.1.3",
    "prettier": "^1.14.3",
    "rimraf": "^2.6.2",
    "rollup": "^0.66.6",
    "rollup-plugin-babel": "^4.0.3",
    "rollup-plugin-uglify": "^3.0.0",
    "semantic-release": "^15.9.17",
    "travis-deploy-once": "^5.0.9"
  },
  "lint-staged": {
    "README.md": [
      "doctoc",
      "prettier --write",
      "git add"
    ],
    "**/!(README).+(md|js|json)": [
      "prettier --write",
      "git add"
    ],
    ".all-contributorsrc": [
      "all-contributors generate",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn test && lint-staged"
    }
  }
}
